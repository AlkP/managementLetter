
<%= form_for @cbMail do |f| %>
  <div class="modal-body">
    <table class="table table-striped">
      <tr class="success">
        <td class="title">Ящик</td>
        <td class="data">
          <%= f.email_field :email, size: 55 %>
        </td>
      </tr>
      <tr class="success">
        <td class="title">Путь</td>
        <td class="data">
          <%= f.text_field :path_to_out, size: 55 %>
        </td>
      </tr>
      <tr class="success">
        <td class="title">Примечание</td>
        <td class="data">
          <%= f.text_area :description, row: 5, cols: 54 %>
        </td>
      </tr>
    </table>
    <div class="modal-footer">
      <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-block btn-lg' %>
    </div>
  </div>
<%end%>

